{
  "experiment": "Ibarra2023_VowelA_SVDD",
  "preprocessing": {
    "sampling_rate": 44100,
    "segment_length_ms": 400,
    "overlap": 0.5,
    "window_size_ms": 40,
    "hop_length_ms": 10,
    "n_mels": 65,
    "output_shape": [65, 41],
    "vocal_filter": "a"
  },
  "architecture": {
    "name": "CNN2D",
    "blocks": [
      {
        "type": "conv",
        "in_channels": 1,
        "out_channels": 32,
        "kernel_size": [3, 3],
        "padding": 1,
        "batch_norm": true,
        "activation": "ReLU",
        "pool_kernel": [3, 3],
        "pool_stride": [2, 2],
        "pool_padding": 1,
        "dropout": 0.3
      },
      {
        "type": "conv",
        "in_channels": 32,
        "out_channels": 64,
        "kernel_size": [3, 3],
        "padding": 1,
        "batch_norm": true,
        "activation": "ReLU",
        "pool_kernel": [3, 3],
        "pool_stride": [2, 2],
        "pool_padding": 1,
        "dropout": 0.3
      }
    ],
    "classifier": {
      "flatten": true,
      "fc_units": [64, 2],
      "activation": "ReLU",
      "dropout_fc": 0.5
    }
  },
  "training": {
    "optimizer": "SGD",
    "lr": 0.1,
    "momentum": 0.9,
    "scheduler": "StepLR",
    "step_size": 10,
    "gamma": 0.1,
    "loss": "CrossEntropyLoss",
    "weighted": true,
    "metric": "f1_macro",
    "epochs": 50,
    "early_stopping": true,
    "patience": 10
  },
  "validation": {
    "method": "StratifiedKFold",
    "n_splits": 10,
    "stratify_by": "speaker_id",
    "vowel": "a",
    "shuffle": true,
    "random_state": 42
  },
  "hyperparameters": {
    "batch_size": [16, 32, 64],
    "dropout_conv": [0.2, 0.5],
    "dropout_fc": [0.2, 0.5],
    "fc_units": [16, 32, 64],
    "filters_1": [32, 64, 128],
    "filters_2": [32, 64, 128],
    "kernel_1": [4, 6, 8],
    "kernel_2": [5, 7, 9]
  }
}

